@model HTSTicaret.Models.Marka

@{
    ViewBag.Title = "Marka Güncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="row">
    <h2>Ürün Güncelle</h2>
    <div class="container">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Marka Güncelle
                </header>
                <div class="panel-body" style="margin-top:20px">
                    <form role="form" action="/Admin/MarkaGuncelle/@Model.Id" method="post" class="form-horizontal tasi-form">
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Ürün Adı</label>
                            <div class="col-lg-10">
                                <input type="text" placeholder="" id="f-name" class="form-control" name="Adi">
                                <p class="help-block">Successfully done</p>
                            </div>
                        </div>
                        <div class="form-group has-error">
                            <label class="col-lg-2 control-label">Açıklama</label>
                            <div class="col-lg-10">
                                <input type="text" placeholder="" id="l-name" class="form-control" name="Aciklama">
                                <p class="help-block">Aha you gave a wrong info</p>
                            </div>
                        </div>
                        <div class="form-group" style="padding-top:50px;padding-left:10px;">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-danger" type="submit">Güncelle</button>
                                <a class="btn btn-default" href="/Admin/Markalar">Geri dön</a>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>
