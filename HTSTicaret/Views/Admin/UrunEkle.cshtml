<div class="row">
    <h2>Ürün Ekle</h2>
    <div class="container">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Ürün Ekle
                </header>
                <div class="panel-body" style="margin-top:20px">
                    <form role="form" action="/Admin/UrunEkle" method="post" class="form-horizontal tasi-form">
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Ürün Adı</label>
                            <div class="col-lg-10">
                                <input type="text" placeholder="" id="f-name" class="form-control" name="Adi">
                                <p class="help-block">Successfully done</p>
                            </div>
                        </div>
                        <div class="form-group has-error">
                            <label class="col-lg-2 control-label">Açıklama</label>
                            <div class="col-lg-10">
                                <input type="text" placeholder="" id="l-name" class="form-control" name="Aciklama">
                                <p class="help-block">Aha you gave a wrong info</p>
                            </div>
                        </div>
                        <div class="form-group has-warning">
                            <label class="col-lg-2 control-label">Alış Fiyat</label>
                            <div class="col-lg-10">
                                <input type="text" class="spinner-input form-control" name="AlisFiyat" >
                                <p class="help-block">Something went wrong</p>
                            </div>
                        </div>


                        <div class="form-group has-warning">
                            <label class="col-lg-2 control-label">Satış Fiyat</label>
                            <div class="col-lg-10">
                                <input type="text" class="spinner-input form-control" name="SatisFiyat" >
                                <p class="help-block">Something went wrong</p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-2 control-label">Kategori :</label>
                            <div class="col-lg-10">
                                <select class="form-control m-bot15" name="KategoriID">
                                    @foreach (var kategori in ViewBag.kategoriler)
                                    {
                                        <option value="@kategori.Id">
                                            @kategori.Adi
                                        </option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-2 control-label">Marka :</label>
                            <div class="col-lg-10">
                                <select class="form-control m-bot15" name="MarkaID">
                                    @foreach (var marka in ViewBag.markalar)
                                    {
                                        <option value="@marka.Id">
                                            @marka.Adi
                                        </option>
                                    }
                                </select>
                            </div>
                             </div>
