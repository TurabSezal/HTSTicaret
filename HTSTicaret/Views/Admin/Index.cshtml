
@{
    ViewBag.Title = "AnaSayfa";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<section id="main-content">
    <section class="wrapper">
        <!-- page start-->
        <section class="panel">
            <header class="panel-heading">
                Ürün Arama
            </header>
            <div class="panel-body">
                <form action="@Url.Action("Urunler", "Admin")" class="form-horizontal search-result">
                    <div class="form-group">
                        <label class="col-lg-1 col-sm-1 control-label">Ara</label>
                        <div class="col-lg-8 col-sm-8">
                            <input type="text" class="form-control input-xxlarge" id="searchName" name="searchName">
                            <p class="help-block">Ürün adı girerek ürünler arasında arama yapabilirsiniz.</p>
                        </div>
                        <div class="clearfix">
                            <div class="btn-group">
                                <button class="btn btn-success" type="submit">Ara
                                <i class="icon-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </section>
</section>
