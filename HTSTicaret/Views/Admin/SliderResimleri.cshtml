
@{
    ViewBag.Title = "SliderResimleri";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form action="/Admin/SliderResimEkle" method="post" enctype="multipart/form-data">
    <br /><br />
    <br /><br />
    <br /><br />
    <div class="form-group">
        <label class="control-label col-md-3">Slider Resmi</label>
        <div class="controls col-md-9">
            <div class="fileupload fileupload-new" data-provides="fileupload">
                <span class="btn btn-white btn-file">
                    <span class="fileupload-new"><i class="icon-paper-clip"></i> Resim Seç</span>
                    <input type="file" class="default" />
                </span>
                <span class="fileupload-preview" style="margin-left:5px;"></span>
                <a href="#" class="close fileupload-exists" data-dismiss="fileupload" style="float: none; margin-left:5px;"></a>
            </div>
        </div>
    </div>

    <input type="submit" class="btn btn-success" name="name" value="Kaydet" />

</form>

