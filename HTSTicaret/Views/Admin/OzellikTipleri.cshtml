
@{
    ViewBag.Title = "OzellikTipleri";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<HTSTicaret.Models.OzellikTip>

<section class="panel">
    <header class="panel-heading">
        Özellik Tipleri
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <br />
            <div class="clearfix">
                <div class="btn-group">
                    <a href="OzellikTipEkle" class="btn btn-success">
                        Yeni Özellik <i class="icon-plus"></i>
                    </a>
                </div>
            </div>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Özellik Adı</th>
                        <th>Açıklama</th>
                        <th>Düzenle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tip in Model)
                    {
                        <tr class="">
                            <td>@tip.Adi</td>
                            <td>@tip.Aciklama</td>
                            @if (tip.Kategori!=null)
                            {
                                <td>@tip.Kategori.Adi</td>
                            }

                            <td>
                                <a class="edit"
                                   href="/admin/OzellikTipGuncelle/@tip.Id">
                                    <i class="icon-pencil"></i>
                                    Düzenle
                                </a>
                            </td>
                            <td>
                                <a class="delete"
                                   href="/admin/OzellikTipSil/@tip.Id">
                                    <i class="icon-trash"></i>
                                    Sil
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
