@model HTSTicaret.Models.Urun

@{
    ViewBag.Title = "Urun Güncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="row">
    <h2>Ürün Güncelle</h2>
    <div class="container">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Ürün Güncelle
                </header>
                <div class="panel-body" style="margin-top:20px">
                    <form role="form" action="/Admin/OlayGuncelle/@Model.Id" method="post" class="form-horizontal tasi-form">
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Ürün Adı</label>
                            <div class="col-lg-10">
                                <input type="text" placeholder="" id="f-name" class="form-control" name="Adi">
                                <p class="help-block">Successfully done</p>
                            </div>
                        </div>
                        <div class="form-group has-error">
                            <label class="col-lg-2 control-label">Açıklama</label>
                            <div class="col-lg-10">
                                <input type="text" placeholder="" id="l-name" class="form-control" name="Aciklama">
                                <p class="help-block">Aha you gave a wrong info</p>
                            </div>
                        </div>
                        <div class="form-group has-warning">
                            <label class="col-lg-2 control-label">Alış Fiyat</label>
                            <div class="col-lg-10">
                                <input type="text" class="spinner-input form-control" name="AlisFiyat">
                                <p class="help-block">Something went wrong</p>
                            </div>
                        </div>


                        <div class="form-group has-warning">
                            <label class="col-lg-2 control-label">Satış Fiyat</label>
                            <div class="col-lg-10">
                                <input type="text" class="spinner-input form-control" name="SatisFiyat">
                                <p class="help-block">Something went wrong</p>
                            </div>
                        </div>
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Olayın Tipi :</label>
                            <div class="col-lg-10">
                                <select class="form-control m-bot15" name="KategoriID">
                                    @foreach (var kategori in ViewBag.Kategoriler)
                                    {
                                        <option value="@kategori.Id" @(kategori.Id == Model.KategoriID ? "selected" : "")>
                                            @kategori.Adi
                                        </option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Olayın Tipi :</label>
                            <div class="col-lg-10">
                                <select class="form-control m-bot15" name="KategoriID">
                                    @foreach (var marka in ViewBag.Markalar)
                                    {
                                        <option value="@marka.Id" @(marka.Id == Model.MarkaID ? "selected" : "")>
                                            @marka.Adi
                                        </option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group" style="padding-top:50px;padding-left:10px;">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-danger" type="submit">Güncelle</button>
                                <a class="btn btn-default" href="/Admin/Urunler ">Geri dön</a>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>
