@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <link rel="shortcut icon" href="img/favicon.png">

    <title>Kayıt Ol</title>

    <!-- Bootstrap core CSS -->
    <link href="/content/template_content/css/bootstrap.min.css" rel="stylesheet">
    <link href="/content/template_content/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="/content/template_content/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="/content/template_content/css/style.css" rel="stylesheet">
    <link href="/content/template_content/css/style-responsive.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>

<body class="login-body">

    <div class="container">

        <form class="form-signin" action="@Url.Action("Kaydet", "Security")" method="post">
            @Html.AntiForgeryToken()
            <h2 class="form-signin-heading">Şimdi Kayıt Ol</h2>
            <div class="login-wrap">
                <p>Kişisel Bilgilerinizi Giriniz</p>
                <input type="text" class="form-control" name="Ad" placeholder="Ad" autofocus>
                <input type="text" class="form-control" name="Soyad" placeholder="Soyad" autofocus>
                <input type="text" class="form-control" name="KullaniciAdi" placeholder="KullaniciAdi" autofocus>
                <input type="password" class="form-control" name="Password" placeholder="Password" autofocus>
                <input type="text" class="form-control" name="TcNo" placeholder="TcNo" autofocus>
                <input type="text" class="form-control" name="Telefon" placeholder="Telefon" autofocus>
                <input type="text" class="form-control" name="Email" placeholder="Email">
                <input type="text" class="form-control" name="Adres" placeholder="Adres" autofocus>
                <label class="checkbox">
                    <input type="checkbox" name="SozlesmeKabul" value="true"> Kullanıcı Sözleşmesini Kabul Ediyorum
                </label>
                <button class="btn btn-lg btn-login btn-block" type="submit">Kaydet</button>

                <div class="registration">
                    Hesabın Varsa
                    <a class="" href="@Url.Action("Login", "Security")">
                        Giriş Yap
                    </a>
                </div>

            </div>

        </form>

    </div>


</body>
</html>
